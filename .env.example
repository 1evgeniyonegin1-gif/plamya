# ============================================================
# NL International AI Bots — Environment Variables
# ============================================================
# Скопируй в .env и заполни нужные значения
# ============================================================

# === TELEGRAM БОТЫ ===
CURATOR_BOT_TOKEN=your_curator_bot_token_here
CONTENT_MANAGER_BOT_TOKEN=your_content_manager_bot_token_here
CHANNEL_USERNAME=@your_channel_username
CURATOR_BOT_USERNAME=@your_curator_bot

# === TELEGRAM API (для Telethon — userbot) ===
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# === DATABASE ===
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/nl_international

# === AI ПРОВАЙДЕРЫ ===

# Deepseek (дёшево, $0.14/1M токенов) — основной для контента
DEEPSEEK_API_KEY=sk-your_deepseek_key_here
DEEPSEEK_MODEL=deepseek-chat

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Groq (НЕ НУЖЕН — транскрипция через faster-whisper локально)
# GROQ_API_KEY=

# === YANDEX ===
YANDEX_SERVICE_ACCOUNT_ID=
YANDEX_KEY_ID=
YANDEX_PRIVATE_KEY_FILE=/path/to/yandex_key.pem
YANDEX_FOLDER_ID=
YANDEX_MODEL=yandexgpt-32k

# YandexART (генерация изображений)
YANDEX_ART_ENABLED=true
YANDEX_ART_WIDTH=1024
YANDEX_ART_HEIGHT=1024

# GigaChat (Сбер)
GIGACHAT_AUTH_TOKEN=
GIGACHAT_CLIENT_ID=

# === ADMIN ===
ADMIN_TELEGRAM_IDS=756877849

# === AI MODEL SELECTION ===
CURATOR_AI_MODEL=GigaChat
CONTENT_MANAGER_AI_MODEL=YandexGPT

# === CHAPPIE ENGINE ===
# Чаппи использует Claude Code CLI (подписка Max, без API ключа)
# Если CLI недоступен — fallback на DEEPSEEK_API_KEY
# Конфиг Чаппи: ~/.plamya/embers/chappie.json
# Транскрипция: faster-whisper локально (не нужен API ключ)

# === REDIS (опционально) ===
REDIS_URL=redis://localhost:6379

# === GENERAL ===
LOG_LEVEL=INFO
TIMEZONE=Europe/Moscow

# ===========================================
# TRAFFIC ENGINE (автокомментирование, VPS)
# ===========================================
MAX_COMMENTS_PER_DAY=15
MIN_COMMENT_INTERVAL_SEC=120
MAX_COMMENT_INTERVAL_SEC=600
MAX_INVITES_PER_DAY=8
MAX_STORY_VIEWS_PER_DAY=60
MAX_STORY_REACTIONS_PER_DAY=15

# Рабочие часы (MSK)
WORK_START_HOUR=9
WORK_END_HOUR=23

# Алерты
ALERT_BOT_TOKEN=your_alert_bot_token
ALERT_ADMIN_ID=756877849
ALERTS_ENABLED=true

# Шифрование сессий
ENCRYPTION_KEY=your_fernet_key_here
